{% extends 'base.html.twig' %}

{% block title %}Boutique - HolyBloom{% endblock %}

{% block body %}
<section class="py-12 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-900">Tous nos produits</h1>

        {% if products is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                {% for product in products %}
                    <div class="bg-white shadow rounded-xl overflow-hidden hover:shadow-lg transition flex flex-col">
                        {% if product.image %}
                            <img src="{{ asset('uploads/images/products/' ~ product.image) }}"
                                 alt="{{ product.name }}"
                                 class="w-full h-56 object-cover">
                        {% else %}
                            <div class="w-full h-56 bg-gray-200 flex items-center justify-center text-gray-500">
                                Pas d’image
                            </div>
                        {% endif %}

                        <div class="p-4 flex flex-col justify-between grow">
                            <div>
                                <h3 class="font-semibold text-lg text-gray-900">{{ product.name }}</h3>
                                <p class="text-gray-600 text-sm mt-2">
                                    {{ product.description|u.truncate(80, '…') }}
                                </p>
                                <div class="text-blue-600 font-semibold text-lg mt-4">
                                    {{ product.getPriceFormatted }}
                                </div>
                            </div>

                            <div class="flex gap-3 mt-6">
                                <a href="{{ path('app_product_show', { id: product.id }) }}"
                                   class="flex-1 text-center bg-gray-100 text-gray-800 py-2 rounded-lg font-medium hover:bg-gray-200 transition">
                                    Voir
                                </a>

                                <a href="#"
                                   class="flex-1 text-center bg-blue-600 text-white py-2 rounded-lg font-medium hover:bg-blue-700 transition">
                                    Ajouter
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-500 mt-6">
                Aucun produit disponible pour le moment.
            </p>
        {% endif %}
    </div>
</section>
{% endblock %}