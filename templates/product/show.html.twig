{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - HolyBloom{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <div class="row g-5 align-items-center">

      {# --- IMAGE DU PRODUIT --- #}
      <div class="col-12 col-md-6">
        <div class="card border-0 shadow-sm overflow-hidden">
          {% if product.image %}
            <img src="{{ asset('uploads/images/products/' ~ product.image) }}"
                 alt="{{ product.name }}"
                 class="card-img-top"
                 style="height: 420px; object-fit: cover;">
          {% else %}
            <div class="bg-light d-flex align-items-center justify-content-center"
                 style="height: 420px;">
              <span class="text-muted">Aucune image disponible</span>
            </div>
          {% endif %}
        </div>
      </div>

      {# --- INFORMATIONS PRODUIT --- #}
      <div class="col-12 col-md-6">
        <h1 class="fw-bold text-dark mb-3">{{ product.name }}</h1>

        {% if product.category %}
          <a href="{{ path('app_category_show', { id: product.category.id }) }}"
             class="text-decoration-none text-primary fw-medium small d-inline-block mb-3">
            {{ product.category.name }}
          </a>
        {% endif %}

        <p class="text-muted mb-4">{{ product.description }}</p>

        <div class="fw-semibold text-holybloom fs-3 mb-4">
          {{ product.price|number_format(2, ',', ' ') }} ‚Ç¨
        </div>

        <div class="d-flex gap-3">
          <button class="btn btn-holybloom d-flex align-items-center justify-content-center"
                  id="add-to-cart-btn"
                  data-id="{{ product.id }}">
            <i class="bi bi-cart-plus me-2"></i> Ajouter au panier
          </button>

          {% if product.category %}
            <a href="{{ path('app_category_show', { id: product.category.id }) }}"
               class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
              <i class="bi bi-arrow-left me-2"></i> Retour √† la cat√©gorie
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{# --- SECTION PRODUITS SIMILAIRES --- #}
{% if similarProducts is defined and similarProducts|length > 0 %}
<section class="py-5 border-top bg-white">
  <div class="container">
    <h2 class="fw-bold mb-4 text-dark">Produits similaires</h2>
    <div class="row g-4">
      {% for item in similarProducts %}
        <div class="col-12 col-sm-6 col-md-3">
          <a href="{{ path('app_product_show', { id: item.id }) }}"
             class="card border-0 shadow-sm h-100 text-decoration-none text-dark hover-shadow">
            {% if item.image %}
              <img src="{{ asset('uploads/images/products/' ~ item.image) }}"
                   alt="{{ item.name }}"
                   class="card-img-top"
                   style="height: 180px; object-fit: cover;">
            {% endif %}
            <div class="card-body">
              <h6 class="fw-semibold mb-2">{{ item.name }}</h6>
              <div class="text-holybloom fw-medium">
                {{ item.price|number_format(2, ',', ' ') }} ‚Ç¨
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<style>
  .btn-holybloom {
    background-color: #b97add;
    border: none;
    color: #fff;
    transition: 0.3s ease;
  }
  .btn-holybloom:hover {
    background-color: #a45ed8;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(185, 122, 221, 0.3);
  }
  .text-holybloom { color: #b97add; }
</style>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.getElementById('add-to-cart-btn');
  if (!btn) return;

  btn.addEventListener('click', () => {
    const id = btn.dataset.id;

    fetch(`/panier/add/${id}`, { method: 'GET' })
      .then(response => response.json())
      .then(data => {
        Swal.fire({
          icon: 'success',
          title: 'Ajout√© !',
          text: 'Le produit a √©t√© ajout√© √† votre panier üíú',
          timer: 1500,
          showConfirmButton: false
        });

        // üîπ Mise √† jour du badge du panier
        const badge = document.querySelector('.bi-cart3 + .badge');
        if (badge) {
          badge.textContent = data.cartCount ?? parseInt(badge.textContent || '0') + 1;
          badge.classList.add('animate__animated', 'animate__heartBeat');
          setTimeout(() => badge.classList.remove('animate__animated', 'animate__heartBeat'), 600);
        }
      })
      .catch(err => console.error(err));
  });
});
</script>
{% endblock %}
{% endblock %}