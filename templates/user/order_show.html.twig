{% extends 'base.html.twig' %}
{% block title %}Commande #{{ order.id }} - HolyBloom{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <a href="{{ path('app_user_orders') }}" class="btn btn-outline-secondary mb-4">
      <i class="bi bi-arrow-left"></i> Retour à mes commandes
    </a>

    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <h3 class="fw-bold text-holybloom mb-3">
          <i class="bi bi-receipt-cutoff me-2"></i>
          Commande #{{ order.id }}
        </h3>
        <p class="text-muted mb-4">
          Passée le {{ order.createdAt|date('d/m/Y à H:i') }} — 
          <span class="fw-semibold">
            {% if order.status == 'paid' %}
              <span class="text-success">Payée</span>
            {% elseif order.status == 'pending' %}
              <span class="text-warning">En attente</span>
            {% else %}
              <span class="text-secondary">Annulée</span>
            {% endif %}
          </span>
        </p>

        <div class="table-responsive">
          <table class="table align-middle">
            <thead class="table-light">
              <tr>
                <th>Produit</th>
                <th class="text-center">Quantité</th>
                <th class="text-end">Prix unitaire</th>
                <th class="text-end">Sous-total</th>
              </tr>
            </thead>
            <tbody>
              {% for item in order.items %}
                <tr>
                  <td>
                    {{ item.product.name }}
                  </td>
                  <td class="text-center">{{ item.quantity }}</td>
                  <td class="text-end">{{ item.price|number_format(2, ',', ' ') }} €</td>
                  <td class="text-end">{{ (item.price * item.quantity)|number_format(2, ',', ' ') }} €</td>
                </tr>
              {% endfor %}
            </tbody>
            <tfoot>
              {% if order.deliveryMethod %}
                <tr>
                  <td colspan="3" class="text-end">Livraison — {{ order.deliveryMethod.name }}</td>
                  <td class="text-end">{{ order.deliveryMethod.price|number_format(2, ',', ' ') }} €</td>
                </tr>
              {% endif %}
              <tr class="table-light fw-bold">
                <td colspan="3" class="text-end">Total</td>
                <td class="text-end text-holybloom">{{ order.total|number_format(2, ',', ' ') }} €</td>
              </tr>
            </tfoot>
          </table>
        </div>

        {% if order.shippingAddress %}
          <div class="mt-4">
            <h5 class="fw-semibold mb-2"><i class="bi bi-geo-alt"></i> Adresse de livraison </h5>
            <p class="mb-0 text-muted">
              {{ order.shippingAddress.street }}, {{ order.shippingAddress.postalCode }} {{ order.shippingAddress.city }}<br>
              {{ order.shippingAddress.country }}
            </p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .text-holybloom { color: #b97add; }
</style>
{% endblock %}