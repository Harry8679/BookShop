{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Bookshop{% endblock %}

{% block body %}
<section class="py-12">
    <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-3xl font-bold mb-8 text-center">{{ category.name }}</h1>

        {% if products is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                {% for product in products %}
                    <div class="bg-white shadow rounded-xl overflow-hidden hover:shadow-lg transition">
                        {% if product.imageName %}
                            <img src="{{ asset('uploads/images/products/' ~ product.imageName) }}"
                                 alt="{{ product.name }}"
                                 class="w-full h-56 object-cover">
                        {% endif %}
                        <div class="p-4">
                            <h3 class="font-semibold text-lg">{{ product.name }}</h3>
                            <p class="text-gray-600 text-sm mt-2">{{ product.description|u.truncate(80, '…') }}</p>
                            <div class="text-blue-600 font-medium mt-3">{{ product.price|number_format(2, ',', ' ') }} €</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-500 mt-6">Aucun produit disponible dans cette catégorie.</p>
        {% endif %}
    </div>
</section>
{% endblock %}