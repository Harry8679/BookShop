{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Bookshop{% endblock %}

{% block body %}
<section class="py-12 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-900">
            {{ category.name }}
        </h1>

        {% if products is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                {% for product in products %}
                    <div class="bg-white shadow rounded-xl overflow-hidden hover:shadow-lg transition">
                        {% if product.image %}
                            <img src="{{ asset('uploads/images/products/' ~ product.image) }}"
                                 alt="{{ product.name }}"
                                 class="w-full h-56 object-cover">
                        {% endif %}

                        <div class="p-5 text-left flex flex-col justify-between h-full">
                            <div>
                                <h3 class="font-semibold text-lg text-gray-900 mb-2">
                                    {{ product.name }}
                                </h3>
                                <p class="text-gray-600 text-sm mb-3">
                                    {{ product.description|u.truncate(80, '…') }}
                                </p>
                            </div>

                            <div class="mt-auto">
                                <div class="text-blue-600 font-medium text-lg mb-4">
                                    {{ product.getPriceFormatted() }}
                                </div>

                                <div class="flex gap-3">
                                    <a href="{{ path('app_product_show', { id: product.id }) }}"
                                       class="flex-1 text-center bg-gray-100 text-gray-800 py-2 rounded-lg font-medium hover:bg-gray-200 transition">
                                        Voir le produit
                                    </a>
                                    <a href="#"
                                       class="flex-1 text-center bg-blue-600 text-white py-2 rounded-lg font-medium hover:bg-blue-700 transition">
                                        Ajouter au panier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-500 mt-6">
                Aucun produit disponible dans cette catégorie.
            </p>
        {% endif %}
    </div>
</section>
{% endblock %}