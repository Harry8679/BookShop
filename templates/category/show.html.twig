{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - HolyBloom{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <h1 class="text-center fw-bold mb-5 text-dark">{{ category.name }}</h1>

    {% if products is not empty %}
      <div class="row g-4">
        {% for product in products %}
          <div class="col-12 col-sm-6 col-md-4">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
              {% if product.image %}
                <img src="{{ asset('uploads/images/products/' ~ product.image) }}"
                     alt="{{ product.name }}"
                     class="card-img-top"
                     style="height: 220px; object-fit: cover;">
              {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center"
                     style="height: 220px;">
                  <span class="text-muted">Pas d‚Äôimage</span>
                </div>
              {% endif %}

              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="fw-semibold text-dark mb-2">{{ product.name }}</h5>
                  <p class="text-muted small mb-3">{{ product.description|u.truncate(80, '‚Ä¶') }}</p>
                  <div class="fw-semibold text-holybloom fs-5">
                    {{ product.price|number_format(2, ',', ' ') }} ‚Ç¨
                  </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                  {# üëÅÔ∏è Bouton Voir #}
                  <a href="{{ path('app_product_show', { id: product.id }) }}"
                     class="btn btn-outline-secondary flex-fill d-flex align-items-center justify-content-center">
                    <i class="bi bi-eye me-2"></i> Voir
                  </a>

                  {# üõí Bouton Ajouter #}
                  <button class="btn btn-holybloom flex-fill d-flex align-items-center justify-content-center add-to-cart-btn"
                          data-id="{{ product.id }}">
                    <i class="bi bi-cart-plus me-2"></i> Ajouter
                  </button>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-muted mt-5">
        Aucun produit disponible dans cette cat√©gorie.
      </p>
    {% endif %}
  </div>
</section>

<style>
  .btn-holybloom {
    background-color: #b97add;
    border: none;
    color: #fff;
    transition: 0.3s ease;
  }
  .btn-holybloom:hover {
    background-color: #a45ed8;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(185, 122, 221, 0.3);
  }
  .text-holybloom { color: #b97add; }
</style>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const id = btn.dataset.id;

      fetch(`/panier/add/${id}`, { method: 'GET' })
        .then(response => response.json())
        .then(data => {
          Swal.fire({
            icon: 'success',
            title: 'Ajout√© üíú',
            text: 'Le produit a √©t√© ajout√© √† votre panier.',
            timer: 1500,
            showConfirmButton: false
          });

          // üîπ Met √† jour le badge du panier
          const badge = document.querySelector('.bi-cart3 + .badge');
          if (badge) {
            badge.textContent = data.cartCount ?? parseInt(badge.textContent || '0') + 1;
            badge.classList.add('animate__animated', 'animate__heartBeat');
            setTimeout(() => badge.classList.remove('animate__animated', 'animate__heartBeat'), 600);
          }
        })
        .catch(err => console.error(err));
    });
  });
});
</script>
{% endblock %}
{% endblock %}