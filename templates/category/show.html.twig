{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - HolyBloom{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <h1 class="text-center fw-bold mb-5 text-dark">{{ category.name }}</h1>

    {% if products is not empty %}
      <div class="row g-4">
        {% for product in products %}
          <div class="col-12 col-sm-6 col-md-4">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
              {% if product.image %}
                <img src="{{ asset('uploads/images/products/' ~ product.image) }}"
                     alt="{{ product.name }}"
                     class="card-img-top"
                     style="height: 220px; object-fit: cover;">
              {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center"
                     style="height: 220px;">
                  <span class="text-muted">Pas d‚Äôimage</span>
                </div>
              {% endif %}

              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="fw-semibold text-dark mb-2">{{ product.name }}</h5>
                  <p class="text-muted small mb-3">{{ product.description|u.truncate(80, '‚Ä¶') }}</p>
                  <div class="fw-semibold text-primary fs-5">
                    {{ product.price|number_format(2, ',', ' ') }} ‚Ç¨
                  </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                  {# üëÅÔ∏è Bouton Voir #}
                  <a href="{{ path('app_product_show', { id: product.id }) }}"
                     class="btn btn-outline-secondary flex-fill">
                    <i class="fa-solid fa-eye me-1"></i> Voir le produit
                  </a>

                  {# üõí Bouton Ajouter #}
                  <a href="#"
                     class="btn btn-primary flex-fill">
                    <i class="fa-solid fa-cart-plus me-1"></i> Ajouter
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-muted mt-5">
        Aucun produit disponible dans cette cat√©gorie.
      </p>
    {% endif %}
  </div>
</section>
{% endblock %}