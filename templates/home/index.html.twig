{% extends 'base.html.twig' %}

{% block title %}Accueil - Bookshop{% endblock %}

{% block body %}

<!-- SECTION : 4 BANNIÈRES COLLECTIONS -->
<section class="bg-white py-14">
    <div class="max-w-7xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-semibold mb-10 tracking-wide text-gray-900">
            Collections de la boutique
        </h2>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {% set collections = [
                {'name': 'Carnets', 'img': 'https://images.unsplash.com/photo-1586864387967-d3f3c9e8d74f'},
                {'name': 'Emballage', 'img': 'https://images.unsplash.com/photo-1519710164239-da123dc03ef4'},
                {'name': 'Papeterie', 'img': 'https://images.unsplash.com/photo-1503602642458-232111445657'},
                {'name': 'Impressions', 'img': 'https://images.unsplash.com/photo-1532153955177-f59af40d6472'}
            ] %}

            {% for c in collections %}
            <a href="#" class="group block overflow-hidden rounded-xl shadow hover:shadow-lg transition">
                <img src="{{ c.img }}?auto=format&fit=crop&w=600&q=80"
                     alt="{{ c.name }}"
                     class="w-full h-64 object-cover group-hover:scale-105 duration-500">
                <div class="py-3 bg-white">
                    <span class="text-gray-800 font-medium group-hover:text-blue-600 transition">
                        {{ c.name }}
                    </span>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>


<!-- SECTION : NOUVEAUTÉS (2 produits) -->
<section class="bg-gray-50 py-20 border-t">
    <div class="max-w-7xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-semibold mb-10 tracking-wide text-gray-900">
            Nouveautés ✨
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            {% for i in 1..2 %}
            <a href="#" class="bg-white rounded-xl shadow hover:shadow-xl transition overflow-hidden block">
                <img src="https://images.unsplash.com/photo-1602526218701-9323f3c2e97b?auto=format&fit=crop&w=900&q=80"
                     alt="Produit {{ i }}"
                     class="w-full h-80 object-cover hover:scale-105 transition duration-700">

                <div class="p-6 text-left">
                    <h3 class="text-xl font-semibold text-gray-900">Produit {{ i }}</h3>
                    <p class="text-gray-600 mt-1">Un design unique, pensé pour l’élégance.</p>
                    <span class="text-blue-600 font-semibold text-lg mt-2 inline-block">
                        29,90 €
                    </span>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}