        <a href="{{ path('app_user_address_add') }}" class="btn btn-holybloom mt-3">
          <i class="bi bi-plus-lg me-1"></i> Ajouter une adresse
        </a>
      </p>
    {% endif %}
  </div>
</section>

<style>
  .btn-holybloom { background-color: #b97add; border: none; color: #fff; }
