{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <h2 class="fw-bold text-holybloom mb-4">
      <i class="bi bi-house-heart me-2"></i> Choisissez votre adresse de livraison
    </h2>

    {% if addresses is not empty %}
      <div class="row g-4">
        {% for address in addresses %}
          <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 h-100">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="fw-semibold mb-2">{{ address.street }}</h5>
                  <p class="text-muted small mb-1">{{ address.postalCode }} {{ address.city }}</p>
                  <p class="text-muted small mb-3">{{ address.country }}</p>
                </div>
                <a href="{{ path('app_order_set_address', { id: address.id }) }}"
                   class="btn btn-holybloom mt-2 w-100">
                   <i class="bi bi-check-circle me-1"></i> Choisir cette adresse
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-muted mt-5">
