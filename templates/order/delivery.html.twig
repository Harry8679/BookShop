{% extends 'base.html.twig' %}

{% block title %}Choisir un transporteur â€” HolyBloom{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
  <div class="container">
    <h2 class="fw-bold text-holybloom mb-4">
      <i class="bi bi-truck me-2"></i> Choisissez votre transporteur
    </h2>

    {% if deliveries is not empty %}
      <div class="row g-4">
        {% for delivery in deliveries %}
          <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 h-100">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="fw-semibold mb-2">{{ delivery.name }}</h5>
                  {% if delivery.carrier %}
                    <p class="text-muted small mb-1">Transporteur : {{ delivery.carrier }}</p>
                  {% endif %}
                  <p class="text-muted small mb-3">Prix : 
                    <span class="fw-bold text-holybloom">{{ delivery.price|number_format(2, ',', ' ') }} â‚¬</span>
                  </p>
                </div>
                <a href="{{ path('app_order_set_delivery', { id: delivery.id }) }}"
                   class="btn btn-holybloom mt-2 w-100">
                   <i class="bi bi-check-circle me-1"></i> Choisir ce transporteur
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-muted mt-5">Aucun transporteur disponible pour le moment ðŸšš</p>
    {% endif %}
  </div>
</section>

<style>
  .btn-holybloom { background-color: #b97add; border: none; color: #fff; }
  .btn-holybloom:hover { background-color: #a45ed8; }
  .text-holybloom { color: #b97add; }
</style>
{% endblock %}